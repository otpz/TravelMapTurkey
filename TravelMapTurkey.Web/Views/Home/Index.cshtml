@model List<UserListViewModel>

@{
    ViewData["Title"] = "Anasayfa";
}

<main class="container h-100 d-flex flex-column justify-content-center align-items-center">
    <h2 class="mt-3">Kullanıcıları Keşfet</h2>
    @foreach (var user in Model)
    {
        <a class="btn btn-gray col-md-6 border border-primary mb-2" asp-action="Profile" asp-controller="User" asp-route-userId="@user.Id">
            <div class="w-100 d-flex justify-content-between align-items-center">
                <h3>@user.FirstName @user.LastName </h3>
                <p>Şehir Sayısı: @user.Cities.Count()</p>
            </div>
        </a>
    }
</main>


