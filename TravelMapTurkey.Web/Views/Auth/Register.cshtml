@model UserRegisterViewModel

@{
    Layout = null;
    ViewData["Title"] = "Kayıt Ol";
}

<!DOCTYPE html>
    <html>
    <head>
        <title>Kayıt Ol</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/TravelMapTurkey.Web.styles.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/turkeyVisited/styles.css" asp-append-version="true">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <script src="https://d3js.org/d3.v5.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.3.2/html2canvas.min.js"></script>
        <script src="https://cdn.jsdelivr.net/g/filesaver.js"></script>
    </head>
<body class="d-flex justify-content-center">
        
        <section class="background-radial-gradient overflow-hidden col-md-6">
        <div class="container px-4 py-5 px-md-5 text-center text-lg-start my-5">
            <div class="row gx-lg-5 align-items-center mb-5">
                <div class="col-lg-12 mb-5 mb-lg-0 position-relative">
                    <div id="radius-shape-1" class="position-absolute rounded-circle shadow-5-strong"></div>
                    <div id="radius-shape-2" class="position-absolute shadow-5-strong"></div>
                    <div class="card bg-glass">
                        <div class="d-flex flex-column justify-content-center card-body px-4 py-5 px-md-5">
                            <a class="align-self-start text-start" asp-controller="Home" asp-action="Index">Geri</a>
                            <h2 class="text-center text-black mb-3">Kayıt Ol</h2>
                            <form asp-controller="Auth" asp-action="Register" method="post">
                                <div asp-validation-summary="All"></div>
                                <!-- 2 column grid layout with text inputs for the first and last names -->
                                <!-- Email input -->
                                <div data-mdb-input-init class="form-outline mb-4">
                                    <input asp-for="FirstName" name="FirstName" type="text" id="form3Example3" class="form-control" />
                                    <label asp-for="FirstName" class="form-label" for="form3Example3">İsim</label>
                                    <span class="text-danger" asp-validation-for="FirstName"></span>
                                </div>

                                <div data-mdb-input-init class="form-outline mb-4">
                                    <input asp-for="LastName" name="LastName" type="text" id="form3Example3" class="form-control" />
                                    <label asp-for="LastName" class="form-label" for="form3Example3">Soyisim</label>
                                    <span class="text-danger" asp-validation-for="LastName"></span>
                                </div>

                                <div data-mdb-input-init class="form-outline mb-4">
                                    <input asp-for="Email" name="Email" type="email" id="form3Example3" class="form-control" />
                                    <label asp-for="Email" class="form-label" for="form3Example3">Email</label>
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>

                                <!-- Password input -->
                                <div data-mdb-input-init class="form-outline mb-4">
                                    <input asp-for="Password" name="Password" type="password" id="form3Example4" class="form-control" />
                                    <label asp-for="Password" class="form-label" for="form3Example4">Şifre</label>
                                    <span class="text-danger" asp-validation-for="Password"></span>
                                </div>

                                <!-- Submit button -->
                                <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-block mb-4 col-lg-12 align-self-center">
                                    Kayıt ol
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    </body>
    </html>


    

